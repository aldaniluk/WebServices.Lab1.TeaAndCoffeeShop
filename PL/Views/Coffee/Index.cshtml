@model List<PL.Models.CoffeeView>
@{
    ViewBag.Title = "Coffee";
}

<br />

@using (Ajax.BeginForm("Filter", "Coffee",
new AjaxOptions { UpdateTargetId = "coffee_to_replace", HttpMethod = "GET", InsertionMode = InsertionMode.Replace }))
{
<div class="form-inline">
    @Html.DropDownList("sort", ViewBag.CoffeeSorts as SelectList, htmlAttributes: new { @class = "form-control" })

    @Html.DropDownList("countryId", ViewBag.Countries as SelectList, htmlAttributes: new { @class = "form-control" })

    <input type="submit" value="Filter" class="btn btn-default" />

    @Html.ActionLink("Create", "Create", "Coffee", null, new { @class = "btn btn-success" })
</div>
}

<br /><br />

<div class="coffee_all">
    <div id="coffee_to_replace">
        @Html.Partial("~/Views/Coffee/_Coffee.cshtml", Model)
    </div>
</div>